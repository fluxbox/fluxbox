		MISCMENU="Blandat"
		XUTILSMENU="X-program"
		FBSETTINGSMENU="FB-inställningar"
		KDEMENUTEXT="KDE-menyer"
		GNOMEMENUTEXT="Gnome-menyer"
		RESTARTITEM="Starta om"
		EXITITEM="Exit"
